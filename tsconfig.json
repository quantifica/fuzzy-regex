{
  "rootDir": "./src",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "types": ["jest", "node"],
    "declaration": true,
    "baseUrl": "."
  },
  "include": ["*.ts", "*.d.ts"]
}
